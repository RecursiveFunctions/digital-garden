{% if page.filePathStem.includes("Daily Notes/") or page.filePathStem.includes("daily-notes") %}
  {% set currentDate = page.fileSlug %}
  {% set allNotes = collections.notes %}
  {% set prevNote = null %}
  {% set nextNote = null %}
  
  {% for note in allNotes %}
    {% if note.filePathStem.includes("Daily Notes/") %}
      {% set noteDate = note.fileSlug %}
      {% if noteDate < currentDate %}
        {% if prevNote == null or noteDate > prevNote.fileSlug %}
          {% set prevNote = note %}
        {% endif %}
      {% endif %}
      {% if noteDate > currentDate %}
        {% if nextNote == null or noteDate < nextNote.fileSlug %}
          {% set nextNote = note %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
  
  <div class="daily-note-nav">
    {% if prevNote %}
      <a href="{{ prevNote.url }}" class="prev-day">
        <i icon-name="chevron-left"></i>
        {{ prevNote.fileSlug | replace("2025-01-", "Jan, 2025 - ") | replace("2025-02-", "Feb, 2025 - ") | replace("2025-03-", "Mar, 2025 - ") | replace("2025-04-", "Apr, 2025 - ") | replace("2025-05-", "May, 2025 - ") | replace("2025-06-", "Jun, 2025 - ") | replace("2025-07-", "Jul, 2025 - ") | replace("2025-08-", "Aug, 2025 - ") | replace("2025-09-", "Sep, 2025 - ") | replace("2025-10-", "Oct, 2025 - ") | replace("2025-11-", "Nov, 2025 - ") | replace("2025-12-", "Dec, 2025 - ") | replace("2024-01-", "Jan, 2024 - ") | replace("2024-02-", "Feb, 2024 - ") | replace("2024-03-", "Mar, 2024 - ") | replace("2024-04-", "Apr, 2024 - ") | replace("2024-05-", "May, 2024 - ") | replace("2024-06-", "Jun, 2024 - ") | replace("2024-07-", "Jul, 2024 - ") | replace("2024-08-", "Aug, 2024 - ") | replace("2024-09-", "Sep, 2024 - ") | replace("2024-10-", "Oct, 2024 - ") | replace("2024-11-", "Nov, 2024 - ") | replace("2024-12-", "Dec, 2024 - ") | replace("2023-01-", "Jan, 2023 - ") | replace("2023-02-", "Feb, 2023 - ") | replace("2023-03-", "Mar, 2023 - ") | replace("2023-04-", "Apr, 2023 - ") | replace("2023-05-", "May, 2023 - ") | replace("2023-06-", "Jun, 2023 - ") | replace("2023-07-", "Jul, 2023 - ") | replace("2023-08-", "Aug, 2023 - ") | replace("2023-09-", "Sep, 2023 - ") | replace("2023-10-", "Oct, 2023 - ") | replace("2023-11-", "Nov, 2023 - ") | replace("2023-12-", "Dec, 2023 - ") }}
      </a>
    {% endif %}
    
    {% if nextNote %}
      <a href="{{ nextNote.url }}" class="next-day">
        {{ nextNote.fileSlug | replace("2025-01-", "Jan, 2025 - ") | replace("2025-02-", "Feb, 2025 - ") | replace("2025-03-", "Mar, 2025 - ") | replace("2025-04-", "Apr, 2025 - ") | replace("2025-05-", "May, 2025 - ") | replace("2025-06-", "Jun, 2025 - ") | replace("2025-07-", "Jul, 2025 - ") | replace("2025-08-", "Aug, 2025 - ") | replace("2025-09-", "Sep, 2025 - ") | replace("2025-10-", "Oct, 2025 - ") | replace("2025-11-", "Nov, 2025 - ") | replace("2025-12-", "Dec, 2025 - ") | replace("2024-01-", "Jan, 2024 - ") | replace("2024-02-", "Feb, 2024 - ") | replace("2024-03-", "Mar, 2024 - ") | replace("2024-04-", "Apr, 2024 - ") | replace("2024-05-", "May, 2024 - ") | replace("2024-06-", "Jun, 2024 - ") | replace("2024-07-", "Jul, 2024 - ") | replace("2024-08-", "Aug, 2024 - ") | replace("2024-09-", "Sep, 2024 - ") | replace("2024-10-", "Oct, 2024 - ") | replace("2024-11-", "Nov, 2024 - ") | replace("2024-12-", "Dec, 2024 - ") | replace("2023-01-", "Jan, 2023 - ") | replace("2023-02-", "Feb, 2023 - ") | replace("2023-03-", "Mar, 2023 - ") | replace("2023-04-", "Apr, 2023 - ") | replace("2023-05-", "May, 2023 - ") | replace("2023-06-", "Jun, 2023 - ") | replace("2023-07-", "Jul, 2023 - ") | replace("2023-08-", "Aug, 2023 - ") | replace("2023-09-", "Sep, 2023 - ") | replace("2023-10-", "Oct, 2023 - ") | replace("2023-11-", "Nov, 2023 - ") | replace("2023-12-", "Dec, 2023 - ") }}
