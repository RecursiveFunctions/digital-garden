{% if page.filePathStem.includes("Daily Notes/") or page.filePathStem.includes("daily-notes") %}
  {% set currentDate = page.fileSlug %}
  {% set allNotes = collections.notes %}
  {% set prevNote = null %}
  {% set nextNote = null %}
  
  {% for note in allNotes %}
    {% if note.filePathStem.includes("Daily Notes/") %}
      {% set noteDate = note.fileSlug %}
      {% if noteDate < currentDate %}
        {% if prevNote == null or noteDate > prevNote.fileSlug %}
          {% set prevNote = note %}
        {% endif %}
      {% endif %}
      {% if noteDate > currentDate %}
        {% if nextNote == null or noteDate < nextNote.fileSlug %}
          {% set nextNote = note %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
  
  <div class="daily-note-nav">
    {% if prevNote %}
      <a href="{{ prevNote.url }}" class="prev-day">
        <i icon-name="chevron-left"></i>
        {% set dateParts = prevNote.fileSlug | split("-") %}
        {% set month = dateParts[1] %}
        {% set day = dateParts[2] %}
        {% set year = dateParts[0] %}
        {% if month == "01" %}{% set month = "Jan" %}{% endif %}
        {% if month == "02" %}{% set month = "Feb" %}{% endif %}
        {% if month == "03" %}{% set month = "Mar" %}{% endif %}
        {% if month == "04" %}{% set month = "Apr" %}{% endif %}
        {% if month == "05" %}{% set month = "May" %}{% endif %}
        {% if month == "06" %}{% set month = "Jun" %}{% endif %}
        {% if month == "07" %}{% set month = "Jul" %}{% endif %}
        {% if month == "08" %}{% set month = "Aug" %}{% endif %}
        {% if month == "09" %}{% set month = "Sep" %}{% endif %}
        {% if month == "10" %}{% set month = "Oct" %}{% endif %}
        {% if month == "11" %}{% set month = "Nov" %}{% endif %}
        {% if month == "12" %}{% set month = "Dec" %}{% endif %}
        {{ month }} {{ day }}, {{ year }}
      </a>
    {% endif %}
    
    {% if nextNote %}
      <a href="{{ nextNote.url }}" class="next-day">
        {% set dateParts = nextNote.fileSlug | split("-") %}
        {% set month = dateParts[1] %}
        {% set day = dateParts[2] %}
        {% set year = dateParts[0] %}
        {% if month == "01" %}{% set month = "Jan" %}{% endif %}
        {% if month == "02" %}{% set month = "Feb" %}{% endif %}
        {% if month == "03" %}{% set month = "Mar" %}{% endif %}
        {% if month == "04" %}{% set month = "Apr" %}{% endif %}
        {% if month == "05" %}{% set month = "May" %}{% endif %}
        {% if month == "06" %}{% set month = "Jun" %}{% endif %}
        {% if month == "07" %}{% set month = "Jul" %}{% endif %}
        {% if month == "08" %}{% set month = "Aug" %}{% endif %}
        {% if month == "09" %}{% set month = "Sep" %}{% endif %}
        {% if month == "10" %}{% set month = "Oct" %}{% endif %}
        {% if month == "11" %}{% set month = "Nov" %}{% endif %}
        {% if month == "12" %}{% set month = "Dec" %}{% endif %}
        {{ month }} {{ day }}, {{ year }}
        <i icon-name="chevron-right"></i>
      </a>
    {% endif %}
  </div>

  <style>
    .daily-note-nav {
      display: flex;
      justify-content: space-between;
      margin: 2rem 0;
      padding: 1rem;
      border-top: 1px solid var(--background-modifier-border);
      border-bottom: 1px solid var(--background-modifier-border);
    }
    
    .daily-note-nav a {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-normal);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-s);
      transition: background-color 0.2s ease;
    }
    
    .daily-note-nav a:hover {
      background-color: var(--background-modifier-hover);
    }
    
    .daily-note-nav i {
      width: 1em;
      height: 1em;
    }
  </style>
{% endif %} 