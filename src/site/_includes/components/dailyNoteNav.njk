{% if page.filePathStem.includes("Daily Notes/") %}
  {% set currentDate = page.fileSlug %}
  {% set allDailyNotes = collections["Daily Notes"] | sortByDate("date") %}
  
  {% set prevNote = null %}
  {% set nextNote = null %}
  
  {% for note in allDailyNotes %}
    {% if note.data.created < currentDate and (prevNote == null or note.data.created > prevNote.data.created) %}
      {% set prevNote = note %}
    {% endif %}
    {% if note.data.created > currentDate and (nextNote == null or note.data.created < nextNote.data.created) %}
      {% set nextNote = note %}
    {% endif %}
  {% endfor %}
  
  <div class="daily-note-nav">
    {% if prevNote %}
      <a href="{{ prevNote.url }}" class="prev-day">
        <i icon-name="chevron-left"></i>
        {{ prevNote.data.created | date("MMM D, YYYY") }}
      </a>
    {% endif %}
    
    {% if nextNote %}
      <a href="{{ nextNote.url }}" class="next-day">
        {{ nextNote.data.created | date("MMM D, YYYY") }}
        <i icon-name="chevron-right"></i>
      </a>
    {% endif %}
  </div>

  <style>
    .daily-note-nav {
      display: flex;
      justify-content: space-between;
      margin: 2rem 0;
      padding: 1rem;
      border-top: 1px solid var(--background-modifier-border);
      border-bottom: 1px solid var(--background-modifier-border);
    }
    
    .daily-note-nav a {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-normal);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-s);
      transition: background-color 0.2s ease;
    }
    
    .daily-note-nav a:hover {
      background-color: var(--background-modifier-hover);
    }
    
    .daily-note-nav i {
      width: 1em;
      height: 1em;
    }
  </style>
{% endif %} 