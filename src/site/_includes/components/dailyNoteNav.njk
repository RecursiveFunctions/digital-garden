{% if page.filePathStem.includes("Daily Notes/") or page.filePathStem.includes("daily-notes") %}
  {% set currentDate = page.fileSlug %}
  {% set allNotes = collections.notes %}
  {% set prevNote = null %}
  {% set nextNote = null %}
  
  {% for note in allNotes %}
    {% if note.filePathStem.includes("Daily Notes/") %}
      {% set noteDate = note.fileSlug %}
      {% if noteDate < currentDate %}
        {% if prevNote == null or noteDate > prevNote.fileSlug %}
          {% set prevNote = note %}
        {% endif %}
      {% endif %}
      {% if noteDate > currentDate %}
        {% if nextNote == null or noteDate < nextNote.fileSlug %}
          {% set nextNote = note %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
  
  <div class="daily-note-nav">
    {% if prevNote %}
      <a href="{{ prevNote.url }}" class="prev-day">
        <i icon-name="chevron-left"></i>
        {{ prevNote.fileSlug | replace("-", " ") | replace("2025", "2025") | replace("03", "Mar") | replace("04", "Apr") | replace("05", "May") | replace("06", "Jun") | replace("07", "Jul") | replace("08", "Aug") | replace("09", "Sep") | replace("10", "Oct") | replace("11", "Nov") | replace("12", "Dec") | replace("01", "Jan") | replace("02", "Feb") }}
      </a>
    {% endif %}
    
    {% if nextNote %}
      <a href="{{ nextNote.url }}" class="next-day">
        {{ nextNote.fileSlug | replace("-", " ") | replace("2025", "2025") | replace("03", "Mar") | replace("04", "Apr") | replace("05", "May") | replace("06", "Jun") | replace("07", "Jul") | replace("08", "Aug") | replace("09", "Sep") | replace("10", "Oct") | replace("11", "Nov") | replace("12", "Dec") | replace("01", "Jan") | replace("02", "Feb") }}
        <i icon-name="chevron-right"></i>
      </a>
    {% endif %}
  </div>

  <style>
    .daily-note-nav {
      display: flex;
      justify-content: space-between;
      margin: 2rem 0;
      padding: 1rem;
      border-top: 1px solid var(--background-modifier-border);
      border-bottom: 1px solid var(--background-modifier-border);
    }
    
    .daily-note-nav a {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-normal);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-s);
      transition: background-color 0.2s ease;
    }
    
    .daily-note-nav a:hover {
      background-color: var(--background-modifier-hover);
    }
    
    .daily-note-nav i {
      width: 1em;
      height: 1em;
    }
  </style>
{% endif %} 